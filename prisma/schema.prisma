// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String    @id @default(uuid())
  name        String?
  username    String?   @unique
  email       String?   @unique
  phoneNumber String?   @unique
  password    String?
  role        Role      @default(customer)
  status      Status    @default(active)
  otp         String?
  otpExpires  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  Vendor      Vendor?
  Wallet      Wallet?
  PayoutMethods PayoutMethod[]
  SupportTickets SupportTicket[]
  Notifications  Notification[]
  avatarUrl      String?
  resetPasswordToken String?
  resetPasswordExpires DateTime?
}

model Vendor {
  id           String       @id @default(uuid())
  userId       String       @unique
  businessName String
  contactPhone String?
  gstin        String?
  address      String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  status       VendorStatus @default(pending)
  rejectionReason String?

  User         User         @relation(fields: [userId], references: [id])
  Wallet       Wallet?
  Brand        Brand?
}

model Brand {
  id        String        @id @default(uuid())
  name      String
  logoUrl   String?
  website   String?
  status    BrandStatus   @default(pending)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  rejectionReason String?
  vendorId  String?       @unique
  Vendor    Vendor?       @relation(fields: [vendorId], references: [id])
  Subscription Subscription?

  Campaigns Campaign[]
  Products  Product[]
}

model Product {
  id          String   @id @default(uuid())
  brandId     String
  name        String
  variant     String?
  category    String?
  description String?
  packSize    String?
  warranty    String?
  imageUrl    String?
  bannerUrl   String?
  
  status      Status   @default(active)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Brand       Brand    @relation(fields: [brandId], references: [id])
}

model Campaign {
  id             String    @id @default(uuid())
  brandId        String
  title          String
  description    String?
  cashbackAmount Decimal?  @db.Decimal(10, 2)
  startDate      DateTime
  endDate        DateTime

  totalBudget    Decimal?  @db.Decimal(12, 2)
  subtotal       Decimal?  @db.Decimal(12, 2)
  allocations    Json?
  status         CampaignStatus @default(pending)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  rejectionReason String?
  Brand          Brand     @relation(fields: [brandId], references: [id])
  QRCodes        QRCode[]
}

model QRCode {
  id                  String       @id @default(uuid())
  campaignId          String
  vendorId            String?
  orderId             String?
  uniqueHash          String       @unique
  cashbackAmount      Decimal      @default(0.00) @db.Decimal(10, 2) // Per-QR cashback amount
  status              QRStatus     @default(generated)
  redeemedByUserId    String?
  redeemedAt          DateTime?
  payoutTransactionId String?
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  Campaign            Campaign     @relation(fields: [campaignId], references: [id])
  Order               QROrder?     @relation(fields: [orderId], references: [id])
}

model QROrder {
  id             String       @id @default(uuid())
  vendorId       String
  campaignId     String
  quantity       Int
  cashbackAmount Decimal      @db.Decimal(10, 2)
  printCost      Decimal      @default(1.00) @db.Decimal(10, 2)
  totalAmount    Decimal      @db.Decimal(12, 2)
  status         OrderStatus  @default(pending)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  QRCodes        QRCode[]
}

model Wallet {
  id            String   @id @default(uuid())
  vendorId      String?  @unique
  userId        String?  @unique
  balance       Decimal  @default(0.00) @db.Decimal(12, 2)
  lockedBalance Decimal  @default(0.00) @db.Decimal(12, 2)
  currency      String   @default("INR")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  Vendor        Vendor?  @relation(fields: [vendorId], references: [id])
  User          User?    @relation(fields: [userId], references: [id])
  Transactions  Transaction[]
  Withdrawals   Withdrawal[]
}

model Subscription {
  id               String              @id @default(uuid())
  brandId          String              @unique
  subscriptionType SubscriptionDuration @default(MONTHS_12)
  startDate        DateTime
  endDate          DateTime
  status           SubscriptionStatus  @default(ACTIVE)
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt

  Brand            Brand               @relation(fields: [brandId], references: [id])
}

model Transaction {
  id          String   @id @default(uuid())
  walletId    String
  type        TransactionType
  amount      Decimal  @db.Decimal(12, 2)
  category    TransactionCategory
  status      TransactionStatus @default(pending)
  referenceId String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Wallet      Wallet   @relation(fields: [walletId], references: [id])
}

enum Role {
  admin
  vendor
  customer
}

enum Status {
  active
  inactive
  blocked
}

enum BrandStatus {
  active
  inactive
  pending
  rejected
}

enum VendorStatus {
  pending
  active
  paused
  rejected
  expired
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  EXPIRED
}

enum SubscriptionDuration {
  MONTHS_6
  MONTHS_12
  MONTHS_24
}

enum CampaignStatus {
  active
  paused
  completed
  pending
  rejected
}

enum QRStatus {
  generated
  assigned
  active
  redeemed
  expired
  blocked
}

enum TransactionType {
  credit
  debit
}

enum TransactionCategory {
  recharge
  qr_purchase
  cashback_payout
  refund
  withdrawal
  campaign_payment
}

enum TransactionStatus {
  pending
  success
  failed
}

enum OrderStatus {
  pending
  paid
  shipped
}

model PayoutMethod {
  id          String       @id @default(uuid())
  userId      String
  User        User         @relation(fields: [userId], references: [id])
  type        String       @default("upi")
  value       String
  details     Json?
  isPrimary   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  Withdrawals Withdrawal[]
}

model Withdrawal {
  id             String       @id @default(uuid())
  walletId       String
  Wallet         Wallet       @relation(fields: [walletId], references: [id])
  amount         Decimal      @db.Decimal(12, 2)
  status         String       @default("pending")
  payoutMethodId String
  PayoutMethod   PayoutMethod @relation(fields: [payoutMethodId], references: [id])
  referenceId    String?
  adminNote      String?
  rejectionReason String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model SupportTicket {
  id          String   @id @default(uuid())
  userId      String
  User        User     @relation(fields: [userId], references: [id])
  subject     String
  message     String
  status      String   @default("open")
  response    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  User      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  isRead    Boolean  @default(false)
  type      String?
  createdAt DateTime @default(now())
}

model Coupon {
  id                String   @id @default(uuid())
  code              String   @unique
  description       String?
  discountType      String
  discountValue     Decimal  @db.Decimal(10, 2)
  minPurchaseAmount Decimal? @db.Decimal(10, 2)
  maxDiscountAmount Decimal? @db.Decimal(10, 2)
  expiryDate        DateTime
  status            Status   @default(active)
  platform          String
  url               String?
  imageUrl          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
