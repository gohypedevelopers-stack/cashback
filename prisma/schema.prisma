generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   String          @id @default(uuid())
  name                 String?
  email                String?         @unique
  phoneNumber          String?         @unique
  password             String?
  role                 Role            @default(customer)
  status               Status          @default(active)
  otp                  String?
  otpExpires           DateTime?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  avatarUrl            String?
  resetPasswordExpires DateTime?
  resetPasswordToken   String?
  username             String?         @unique
  ActivityLog          ActivityLog[]
  CredentialRequests   CredentialRequest[]
  Claims               Claim[]
  Notifications        Notification[]
  PayoutMethods        PayoutMethod[]
  ProductReports       ProductReport[]
  RedemptionEvents     RedemptionEvent[]
  SupportTickets       SupportTicket[]
  Vendor               Vendor?
  Wallet               Wallet?
}

model Vendor {
  id                String              @id @default(uuid())
  userId            String              @unique
  businessName      String
  contactPhone      String?
  alternatePhone    String?
  designation       String?
  gstin             String?
  address           String?
  city              String?
  state             String?
  pincode           String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  rejectionReason   String?
  status            VendorStatus        @default(pending)
  contactEmail      String?
  techFeePerQr      Decimal             @default(0.00) @db.Decimal(10, 2)
  ActivityLog       ActivityLog[]
  CampaignBudgets   CampaignBudget[]
  CredentialRequests CredentialRequest[]
  Invoices          Invoice[]
  ProductReports    ProductReport[]
  RedemptionEvents  RedemptionEvent[]
  Brand             Brand?
  User              User                @relation(fields: [userId], references: [id])
  VendorActivityLog VendorActivityLog[]
  Wallet            Wallet?
}

model Brand {
  id              String        @id @default(uuid())
  name            String
  logoUrl         String?
  website         String?
  status          BrandStatus   @default(pending)
  qrPricePerUnit  Decimal       @default(1.00) @db.Decimal(10, 2)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  vendorId        String?       @unique
  rejectionReason String?
  ActivityLog     ActivityLog[]
  Invoices        Invoice[]
  Vendor          Vendor?       @relation(fields: [vendorId], references: [id])
  Campaigns       Campaign[]
  Products        Product[]
}

model Product {
  id          String     @id @default(uuid())
  brandId     String
  name        String
  sku         String?
  mrp         Decimal?   @db.Decimal(10, 2)
  variant     String?
  category    String?
  description String?
  packSize    String?
  warranty    String?
  imageUrl    String?
  bannerUrl   String?
  status      Status     @default(active)
  deletedAt   DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Brand       Brand      @relation(fields: [brandId], references: [id])
  Campaigns   Campaign[]
  ProductReports ProductReport[]
}

model Campaign {
  id              String         @id @default(uuid())
  brandId         String
  productId       String?
  title           String
  description     String?
  planType        PlanType       @default(prepaid)
  voucherType     VoucherType    @default(none)
  cashbackAmount  Decimal?       @db.Decimal(10, 2)
  startDate       DateTime
  endDate         DateTime
  totalBudget     Decimal?       @db.Decimal(12, 2)
  status          CampaignStatus @default(pending)
  deletedAt       DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  rejectionReason String?
  allocations     Json?
  subtotal        Decimal?       @db.Decimal(12, 2)
  ActivityLog     ActivityLog[]
  CampaignBudgets CampaignBudget[]
  Brand           Brand          @relation(fields: [brandId], references: [id])
  Product         Product?       @relation(fields: [productId], references: [id])
  QRCodes         QRCode[]
  RedemptionEvents RedemptionEvent[]
}

model QRCode {
  id                  String    @id @default(uuid())
  campaignId          String?
  campaignBudgetId    String?
  vendorId            String?
  uniqueHash          String    @unique
  seriesCode          String?
  seriesOrder         Int?
  sourceBatch         String?
  importedAt          DateTime?
  status              QRStatus  @default(generated)
  redeemedByUserId    String?
  redeemedAt          DateTime?
  payoutTransactionId String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  cashbackAmount      Decimal   @default(0.00) @db.Decimal(10, 2)
  orderId             String?
  Campaign            Campaign?  @relation(fields: [campaignId], references: [id])
  CampaignBudget      CampaignBudget? @relation(fields: [campaignBudgetId], references: [id])
  Order               QROrder?  @relation(fields: [orderId], references: [id])
  RedemptionEvents    RedemptionEvent[]

  @@index([campaignId, status])
  @@index([campaignBudgetId, status])
  @@index([vendorId, status])
  @@index([vendorId, status, seriesCode])
  @@index([vendorId, seriesCode, seriesOrder])
}

model Claim {
  id              String   @id @default(uuid())
  token           String   @unique
  amount          Decimal  @db.Decimal(12, 2)
  createdAt       DateTime @default(now())
  expiresAt       DateTime
  claimedAt       DateTime?
  claimedByUserId String?
  ClaimedByUser   User?    @relation(fields: [claimedByUserId], references: [id])

  @@index([expiresAt])
  @@index([claimedByUserId, claimedAt])
}

model QROrder {
  id             String      @id @default(uuid())
  vendorId       String
  campaignId     String
  quantity       Int
  cashbackAmount Decimal     @db.Decimal(10, 2)
  printCost      Decimal     @default(1.00) @db.Decimal(10, 2)
  totalAmount    Decimal     @db.Decimal(12, 2)
  status         OrderStatus @default(pending)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  QRCodes        QRCode[]

  @@index([campaignId, createdAt])
  @@index([vendorId, createdAt])
}

model Wallet {
  id            String        @id @default(uuid())
  vendorId      String?       @unique
  userId        String?       @unique
  balance       Decimal       @default(0.00) @db.Decimal(12, 2)
  lockedBalance Decimal       @default(0.00) @db.Decimal(12, 2)
  currency      String        @default("INR")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  Transactions  Transaction[]
  User          User?         @relation(fields: [userId], references: [id])
  Vendor        Vendor?       @relation(fields: [vendorId], references: [id])
  Withdrawals   Withdrawal[]
}

model CampaignBudget {
  id                  String               @id @default(uuid())
  campaignId          String?
  vendorId            String
  initialLockedAmount Decimal              @db.Decimal(12, 2)
  lockedAmount        Decimal              @db.Decimal(12, 2)
  spentAmount         Decimal              @default(0.00) @db.Decimal(12, 2)
  refundedAmount      Decimal              @default(0.00) @db.Decimal(12, 2)
  status              CampaignBudgetStatus @default(active)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  Campaign            Campaign?            @relation(fields: [campaignId], references: [id])
  Vendor              Vendor               @relation(fields: [vendorId], references: [id])
  Invoices            Invoice[]
  QRCodes             QRCode[]
  Transactions        Transaction[]

  @@index([campaignId, status])
  @@index([vendorId, status, createdAt])
}

model Transaction {
  id          String              @id @default(uuid())
  walletId    String
  campaignBudgetId String?
  invoiceId   String?
  qrId        String?
  type        TransactionType
  amount      Decimal             @db.Decimal(12, 2)
  category    TransactionCategory
  status      TransactionStatus   @default(pending)
  referenceId String?
  description String?
  metadata    Json?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  CampaignBudget CampaignBudget?  @relation(fields: [campaignBudgetId], references: [id])
  Invoice     Invoice?            @relation(fields: [invoiceId], references: [id])
  Wallet      Wallet              @relation(fields: [walletId], references: [id])

  @@index([campaignBudgetId])
  @@index([invoiceId])
  @@index([referenceId])
  @@index([walletId, createdAt])
}

model RedemptionEvent {
  id             String              @id @default(uuid())
  qrId           String?
  campaignId     String?
  vendorId       String?
  userId         String?
  amount         Decimal             @default(0.00) @db.Decimal(12, 2)
  type           RedemptionEventType @default(preview)
  lat            Decimal?            @db.Decimal(10, 7)
  lng            Decimal?            @db.Decimal(10, 7)
  accuracyMeters Decimal?            @db.Decimal(10, 2)
  city           String?
  state          String?
  pincode        String?
  capturedAt     DateTime?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  Campaign       Campaign?           @relation(fields: [campaignId], references: [id])
  QRCode         QRCode?             @relation(fields: [qrId], references: [id])
  User           User?               @relation(fields: [userId], references: [id])
  Vendor         Vendor?             @relation(fields: [vendorId], references: [id])

  @@index([campaignId, createdAt])
  @@index([type, createdAt])
  @@index([userId, createdAt])
  @@index([vendorId, createdAt])
}

model Invoice {
  id               String              @id @default(uuid())
  number           String              @unique
  vendorId         String
  brandId          String?
  campaignBudgetId String?
  type             InvoiceType
  subtotal         Decimal             @default(0.00) @db.Decimal(12, 2)
  tax              Decimal             @default(0.00) @db.Decimal(12, 2)
  total            Decimal             @default(0.00) @db.Decimal(12, 2)
  status           InvoiceStatus       @default(issued)
  issuedAt         DateTime            @default(now())
  pdfPath          String?
  shareToken       String?             @unique
  shareExpiresAt   DateTime?
  metadata         Json?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  Brand            Brand?              @relation(fields: [brandId], references: [id])
  CampaignBudget   CampaignBudget?     @relation(fields: [campaignBudgetId], references: [id])
  Items            InvoiceItem[]
  Transactions     Transaction[]
  Vendor           Vendor              @relation(fields: [vendorId], references: [id])

  @@index([shareToken])
  @@index([vendorId, issuedAt])
}

model InvoiceItem {
  id        String   @id @default(uuid())
  invoiceId String
  label     String
  qty       Int      @default(1)
  unitPrice Decimal  @default(0.00) @db.Decimal(12, 2)
  amount    Decimal  @default(0.00) @db.Decimal(12, 2)
  hsnSac    String?
  taxRate   Decimal? @db.Decimal(5, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Invoice   Invoice  @relation(fields: [invoiceId], references: [id])

  @@index([invoiceId])
}

model ProductReport {
  id          String   @id @default(uuid())
  vendorId    String
  productId   String?
  userId      String?
  title       String
  description String?
  fileName    String?
  fileUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Product     Product? @relation(fields: [productId], references: [id])
  User        User?    @relation(fields: [userId], references: [id])
  Vendor      Vendor   @relation(fields: [vendorId], references: [id])

  @@index([productId, createdAt])
  @@index([vendorId, createdAt])
}

model PayoutMethod {
  id          String       @id @default(uuid())
  userId      String
  type        String       @default("upi")
  value       String
  details     Json?
  isPrimary   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  User        User         @relation(fields: [userId], references: [id])
  Withdrawals Withdrawal[]
}

model Withdrawal {
  id              String       @id @default(uuid())
  walletId        String
  amount          Decimal      @db.Decimal(12, 2)
  status          String       @default("pending")
  payoutMethodId  String
  referenceId     String?
  adminNote       String?
  rejectionReason String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  PayoutMethod    PayoutMethod @relation(fields: [payoutMethodId], references: [id])
  Wallet          Wallet       @relation(fields: [walletId], references: [id])
}

model SupportTicket {
  id        String   @id @default(uuid())
  userId    String
  subject   String
  message   String
  status    String   @default("open")
  response  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  isRead    Boolean  @default(false)
  type      String?
  createdAt DateTime @default(now())
  metadata  Json?
  User      User     @relation(fields: [userId], references: [id])
}

model CredentialRequest {
  id                String                  @id @default(uuid())
  vendorId          String
  userId            String
  requestedUsername String?
  requestedPassword String?
  status            CredentialRequestStatus @default(pending)
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt

  Vendor Vendor @relation(fields: [vendorId], references: [id])
  User   User   @relation(fields: [userId], references: [id])

  @@index([vendorId, status])
  @@index([userId, status])
}

model Coupon {
  id                String   @id @default(uuid())
  code              String   @unique
  description       String?
  discountType      String
  discountValue     Decimal  @db.Decimal(10, 2)
  minPurchaseAmount Decimal? @db.Decimal(10, 2)
  maxDiscountAmount Decimal? @db.Decimal(10, 2)
  expiryDate        DateTime
  status            Status   @default(active)
  platform          String
  url               String?
  imageUrl          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model SystemSettings {
  id                String   @id @default("default")
  techFeePerQr      Decimal  @default(1.00) @db.Decimal(10, 2)
  minPayoutAmount   Decimal  @default(100.00) @db.Decimal(10, 2)
  maxDailyPayout    Decimal  @default(10000.00) @db.Decimal(12, 2)
  qrExpiryDays      Int      @default(365)
  platformName      String   @default("Assured Rewards")
  supportEmail      String   @default("support@assuredrewards.com")
  termsUrl          String?
  privacyUrl        String?
  metadata          Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ActivityLog {
  id          String    @id
  actorUserId String?
  actorRole   Role?
  vendorId    String?
  brandId     String?
  campaignId  String?
  action      String
  entityType  String?
  entityId    String?
  description String?
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime  @default(now())
  User        User?     @relation(fields: [actorUserId], references: [id])
  Brand       Brand?    @relation(fields: [brandId], references: [id])
  Campaign    Campaign? @relation(fields: [campaignId], references: [id])
  Vendor      Vendor?   @relation(fields: [vendorId], references: [id])

  @@index([action, createdAt])
  @@index([actorUserId, createdAt])
  @@index([brandId, createdAt])
  @@index([campaignId, createdAt])
  @@index([vendorId, createdAt])
}

model VendorActivityLog {
  id         String   @id
  vendorId   String
  action     String
  entityType String?
  entityId   String?
  metadata   Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  Vendor     Vendor   @relation(fields: [vendorId], references: [id])

  @@index([action])
  @@index([vendorId, createdAt])
}

enum Role {
  admin
  vendor
  customer
}

enum Status {
  active
  inactive
  blocked
}

enum BrandStatus {
  active
  inactive
  pending
  rejected
}

enum VendorStatus {
  pending
  active
  paused
  rejected
  expired
}

enum CampaignStatus {
  active
  paused
  completed
  pending
  rejected
}

enum QRStatus {
  inventory
  funded
  generated
  assigned
  active
  redeemed
  expired
  blocked
  void
}

enum TransactionType {
  credit
  debit
}

enum TransactionCategory {
  recharge
  lock_funds
  locked_spend
  unlock_refund
  tech_fee_charge
  voucher_fee_charge
  qr_purchase
  cashback_payout
  refund
  withdrawal
  campaign_payment
  admin_adjustment
}

enum TransactionStatus {
  pending
  success
  failed
}

enum OrderStatus {
  pending
  paid
  shipped
 }

enum CredentialRequestStatus {
  pending
  approved
  rejected
}

enum CampaignBudgetStatus {
  active
  refunded
  closed
}

enum RedemptionEventType {
  redeem_success
  preview
  invalid
  already_redeemed
}

enum InvoiceType {
  FEE_TAX_INVOICE
  DEPOSIT_RECEIPT
  REFUND_RECEIPT
  MONTHLY_STATEMENT
}

enum InvoiceStatus {
  issued
  void
}

enum PlanType {
  prepaid
  postpaid
}

enum VoucherType {
  digital_voucher
  printed_qr
  none
}
