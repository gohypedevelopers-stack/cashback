// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  name        String?
  email       String?   @unique
  phoneNumber String?   @unique
  password    String?
  role        Role      @default(customer)
  status      Status    @default(active)
  otp         String?
  otpExpires  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  Vendor      Vendor?
  Wallet      Wallet?
  PayoutMethods PayoutMethod[]
  SupportTickets SupportTicket[]
  Notifications  Notification[]
}

model Vendor {
  id           String   @id @default(uuid())
  userId       String   @unique
  businessName String
  contactPhone String?
  gstin        String?
  address      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  User         User     @relation(fields: [userId], references: [id])
  Wallet       Wallet?
  Brands       Brand[]
  status       BrandStatus @default(pending) // Reusing BrandStatus as it has pending/active/rejected
}

model Brand {
  id        String     @id @default(uuid())
  name      String
  logoUrl   String?
  website   String?
  status    BrandStatus @default(pending)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  vendorId  String?
  Vendor    Vendor?    @relation(fields: [vendorId], references: [id])

  Campaigns Campaign[]
  Products  Product[]
}

model Product {
  id          String   @id @default(uuid())
  brandId     String
  name        String
  variant     String?
  category    String?
  description String?
  packSize    String?
  warranty    String?
  imageUrl    String?
  bannerUrl   String?
  
  status      Status   @default(active)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Brand       Brand    @relation(fields: [brandId], references: [id])
}

model Campaign {
  id             String    @id @default(uuid())
  brandId        String
  title          String
  description    String?
  cashbackAmount Decimal   @db.Decimal(10, 2)
  startDate      DateTime
  endDate        DateTime
  totalBudget    Decimal?  @db.Decimal(12, 2)
  status         CampaignStatus @default(pending)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  Brand          Brand     @relation(fields: [brandId], references: [id])
  QRCodes        QRCode[]
}

model QRCode {
  id                  String       @id @default(uuid())
  campaignId          String
  vendorId            String?
  uniqueHash          String       @unique
  status              QRStatus     @default(generated)
  redeemedByUserId    String?
  redeemedAt          DateTime?
  payoutTransactionId String?
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  Campaign            Campaign     @relation(fields: [campaignId], references: [id])
}

model Wallet {
  id            String   @id @default(uuid())
  vendorId      String?  @unique
  userId        String?  @unique
  balance       Decimal  @default(0.00) @db.Decimal(12, 2)
  lockedBalance Decimal  @default(0.00) @db.Decimal(12, 2)
  currency      String   @default("INR")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  Vendor        Vendor?  @relation(fields: [vendorId], references: [id])
  User          User?    @relation(fields: [userId], references: [id])
  Transactions  Transaction[]
  Withdrawals   Withdrawal[]
}

model Transaction {
  id          String   @id @default(uuid())
  walletId    String
  type        TransactionType
  amount      Decimal  @db.Decimal(12, 2)
  category    TransactionCategory
  status      TransactionStatus @default(pending)
  referenceId String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Wallet      Wallet   @relation(fields: [walletId], references: [id])
}

enum Role {
  admin
  vendor
  customer
}

enum Status {
  active
  inactive
  blocked
}

enum BrandStatus {
  active
  inactive
  pending
  rejected
}

enum CampaignStatus {
  active
  paused
  completed
  pending
  rejected
}

enum QRStatus {
  generated
  assigned
  active
  redeemed
  expired
  blocked
}

enum TransactionType {
  credit
  debit
}

enum TransactionCategory {
  recharge
  qr_purchase
  cashback_payout
  refund
  withdrawal
}

enum TransactionStatus {
  pending
  success
  failed
}

model PayoutMethod {
  id          String       @id @default(uuid())
  userId      String
  User        User         @relation(fields: [userId], references: [id])
  type        String       @default("upi") // "upi", "bank_account"
  value       String       // The UPI ID or Account Number
  details     Json?        // Extra details like IFSC if needed later
  isPrimary   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  Withdrawals Withdrawal[]
}

model Withdrawal {
  id             String       @id @default(uuid())
  walletId       String
  Wallet         Wallet       @relation(fields: [walletId], references: [id])
  amount         Decimal      @db.Decimal(12, 2)
  status         String       @default("pending") // pending, processed, rejected
  payoutMethodId String
  PayoutMethod   PayoutMethod @relation(fields: [payoutMethodId], references: [id])
  referenceId    String?      // Bank/UPI Ref ID
  adminNote      String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model SupportTicket {
  id          String   @id @default(uuid())
  userId      String
  User        User     @relation(fields: [userId], references: [id])
  subject     String
  message     String
  status      String   @default("open") // open, resolved, closed
  response    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  User      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  isRead    Boolean  @default(false)
  type      String?  // system, transaction, alert
  createdAt DateTime @default(now())
}
