generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   String          @id @default(uuid())
  name                 String?
  email                String?         @unique
  phoneNumber          String?         @unique
  password             String?
  role                 Role            @default(customer)
  status               Status          @default(active)
  otp                  String?
  otpExpires           DateTime?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  avatarUrl            String?
  resetPasswordExpires DateTime?
  resetPasswordToken   String?
  username             String?         @unique
  ActivityLog          ActivityLog[]
  CredentialRequests   CredentialRequest[]
  Claims               Claim[]
  Notifications        Notification[]
  PayoutMethods        PayoutMethod[]
  SupportTickets       SupportTicket[]
  Vendor               Vendor?
  Wallet               Wallet?
}

model Vendor {
  id                String              @id @default(uuid())
  userId            String              @unique
  businessName      String
  contactPhone      String?
  gstin             String?
  address           String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  rejectionReason   String?
  status            VendorStatus        @default(pending)
  contactEmail      String?
  ActivityLog       ActivityLog[]
  CredentialRequests CredentialRequest[]
  Brand             Brand?
  User              User                @relation(fields: [userId], references: [id])
  VendorActivityLog VendorActivityLog[]
  Wallet            Wallet?
}

model Brand {
  id              String        @id @default(uuid())
  name            String
  logoUrl         String?
  website         String?
  status          BrandStatus   @default(pending)
  qrPricePerUnit  Decimal       @default(1.00) @db.Decimal(10, 2)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  vendorId        String?       @unique
  rejectionReason String?
  ActivityLog     ActivityLog[]
  Vendor          Vendor?       @relation(fields: [vendorId], references: [id])
  Campaigns       Campaign[]
  Products        Product[]
  Subscription    Subscription?
}

model Product {
  id          String     @id @default(uuid())
  brandId     String
  name        String
  sku         String?
  mrp         Decimal?   @db.Decimal(10, 2)
  variant     String?
  category    String?
  description String?
  packSize    String?
  warranty    String?
  imageUrl    String?
  bannerUrl   String?
  status      Status     @default(active)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Brand       Brand      @relation(fields: [brandId], references: [id])
  Campaigns   Campaign[]
}

model Campaign {
  id              String         @id @default(uuid())
  brandId         String
  productId       String?
  title           String
  description     String?
  cashbackAmount  Decimal?       @db.Decimal(10, 2)
  startDate       DateTime
  endDate         DateTime
  totalBudget     Decimal?       @db.Decimal(12, 2)
  status          CampaignStatus @default(pending)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  rejectionReason String?
  allocations     Json?
  subtotal        Decimal?       @db.Decimal(12, 2)
  ActivityLog     ActivityLog[]
  Brand           Brand          @relation(fields: [brandId], references: [id])
  Product         Product?       @relation(fields: [productId], references: [id])
  QRCodes         QRCode[]
}

model QRCode {
  id                  String    @id @default(uuid())
  campaignId          String
  vendorId            String?
  uniqueHash          String    @unique
  status              QRStatus  @default(generated)
  redeemedByUserId    String?
  redeemedAt          DateTime?
  payoutTransactionId String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  cashbackAmount      Decimal   @default(0.00) @db.Decimal(10, 2)
  orderId             String?
  Campaign            Campaign  @relation(fields: [campaignId], references: [id])
  Order               QROrder?  @relation(fields: [orderId], references: [id])

  @@index([campaignId, status])
  @@index([vendorId, status])
}

model Claim {
  id              String   @id @default(uuid())
  token           String   @unique
  amount          Decimal  @db.Decimal(12, 2)
  createdAt       DateTime @default(now())
  expiresAt       DateTime
  claimedAt       DateTime?
  claimedByUserId String?
  ClaimedByUser   User?    @relation(fields: [claimedByUserId], references: [id])

  @@index([expiresAt])
  @@index([claimedByUserId, claimedAt])
}

model QROrder {
  id             String      @id @default(uuid())
  vendorId       String
  campaignId     String
  quantity       Int
  cashbackAmount Decimal     @db.Decimal(10, 2)
  printCost      Decimal     @default(1.00) @db.Decimal(10, 2)
  totalAmount    Decimal     @db.Decimal(12, 2)
  status         OrderStatus @default(pending)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  QRCodes        QRCode[]

  @@index([campaignId, createdAt])
  @@index([vendorId, createdAt])
}

model Wallet {
  id            String        @id @default(uuid())
  vendorId      String?       @unique
  userId        String?       @unique
  balance       Decimal       @default(0.00) @db.Decimal(12, 2)
  lockedBalance Decimal       @default(0.00) @db.Decimal(12, 2)
  currency      String        @default("INR")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  Transactions  Transaction[]
  User          User?         @relation(fields: [userId], references: [id])
  Vendor        Vendor?       @relation(fields: [vendorId], references: [id])
  Withdrawals   Withdrawal[]
}

model Subscription {
  id               String               @id @default(uuid())
  brandId          String               @unique
  subscriptionType SubscriptionDuration @default(MONTHS_12)
  startDate        DateTime
  endDate          DateTime
  status           SubscriptionStatus   @default(ACTIVE)
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  Brand            Brand                @relation(fields: [brandId], references: [id])
}

model Transaction {
  id          String              @id @default(uuid())
  walletId    String
  type        TransactionType
  amount      Decimal             @db.Decimal(12, 2)
  category    TransactionCategory
  status      TransactionStatus   @default(pending)
  referenceId String?
  description String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  Wallet      Wallet              @relation(fields: [walletId], references: [id])

  @@index([referenceId])
  @@index([walletId, createdAt])
}

model PayoutMethod {
  id          String       @id @default(uuid())
  userId      String
  type        String       @default("upi")
  value       String
  details     Json?
  isPrimary   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  User        User         @relation(fields: [userId], references: [id])
  Withdrawals Withdrawal[]
}

model Withdrawal {
  id              String       @id @default(uuid())
  walletId        String
  amount          Decimal      @db.Decimal(12, 2)
  status          String       @default("pending")
  payoutMethodId  String
  referenceId     String?
  adminNote       String?
  rejectionReason String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  PayoutMethod    PayoutMethod @relation(fields: [payoutMethodId], references: [id])
  Wallet          Wallet       @relation(fields: [walletId], references: [id])
}

model SupportTicket {
  id        String   @id @default(uuid())
  userId    String
  subject   String
  message   String
  status    String   @default("open")
  response  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  isRead    Boolean  @default(false)
  type      String?
  createdAt DateTime @default(now())
  metadata  Json?
  User      User     @relation(fields: [userId], references: [id])
}

model CredentialRequest {
  id                String                  @id @default(uuid())
  vendorId          String
  userId            String
  requestedUsername String?
  requestedPassword String?
  status            CredentialRequestStatus @default(pending)
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt

  Vendor Vendor @relation(fields: [vendorId], references: [id])
  User   User   @relation(fields: [userId], references: [id])

  @@index([vendorId, status])
  @@index([userId, status])
}

model Coupon {
  id                String   @id @default(uuid())
  code              String   @unique
  description       String?
  discountType      String
  discountValue     Decimal  @db.Decimal(10, 2)
  minPurchaseAmount Decimal? @db.Decimal(10, 2)
  maxDiscountAmount Decimal? @db.Decimal(10, 2)
  expiryDate        DateTime
  status            Status   @default(active)
  platform          String
  url               String?
  imageUrl          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model SystemSettings {
  id                String   @id @default("default")
  techFeePerQr      Decimal  @default(1.00) @db.Decimal(10, 2)
  minPayoutAmount   Decimal  @default(100.00) @db.Decimal(10, 2)
  maxDailyPayout    Decimal  @default(10000.00) @db.Decimal(12, 2)
  qrExpiryDays      Int      @default(365)
  platformName      String   @default("Assured Rewards")
  supportEmail      String   @default("support@assuredrewards.com")
  termsUrl          String?
  privacyUrl        String?
  metadata          Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ActivityLog {
  id          String    @id
  actorUserId String?
  actorRole   Role?
  vendorId    String?
  brandId     String?
  campaignId  String?
  action      String
  entityType  String?
  entityId    String?
  description String?
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime  @default(now())
  User        User?     @relation(fields: [actorUserId], references: [id])
  Brand       Brand?    @relation(fields: [brandId], references: [id])
  Campaign    Campaign? @relation(fields: [campaignId], references: [id])
  Vendor      Vendor?   @relation(fields: [vendorId], references: [id])

  @@index([action, createdAt])
  @@index([actorUserId, createdAt])
  @@index([brandId, createdAt])
  @@index([campaignId, createdAt])
  @@index([vendorId, createdAt])
}

model VendorActivityLog {
  id         String   @id
  vendorId   String
  action     String
  entityType String?
  entityId   String?
  metadata   Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  Vendor     Vendor   @relation(fields: [vendorId], references: [id])

  @@index([action])
  @@index([vendorId, createdAt])
}

enum Role {
  admin
  vendor
  customer
}

enum Status {
  active
  inactive
  blocked
}

enum BrandStatus {
  active
  inactive
  pending
  rejected
}

enum VendorStatus {
  pending
  active
  paused
  rejected
  expired
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  EXPIRED
}

enum SubscriptionDuration {
  MONTHS_6
  MONTHS_12
  MONTHS_24
}

enum CampaignStatus {
  active
  paused
  completed
  pending
  rejected
}

enum QRStatus {
  generated
  assigned
  active
  redeemed
  expired
  blocked
}

enum TransactionType {
  credit
  debit
}

enum TransactionCategory {
  recharge
  qr_purchase
  cashback_payout
  refund
  withdrawal
  campaign_payment
  admin_adjustment
}

enum TransactionStatus {
  pending
  success
  failed
}

enum OrderStatus {
  pending
  paid
  shipped
 }

enum CredentialRequestStatus {
  pending
  approved
  rejected
}
